/* 购物车 */
.cart_content .cart_title {
  padding: 14rpx;
  margin-bottom: 8rpx;
  font-size: 36rpx;
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}
.cart_content .cart_main .cart_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.cart_content .cart_main .cart_item .item_checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .item_img {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .item_img image {
  width: 85%;
}
.cart_content .cart_main .cart_item .item_info {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .item_info .item_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_main .cart_item .item_info .item_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .item_info .item_price_wrap .price {
  font-size: 34rpx;
  color: var(--themeColor);
}
.cart_content .cart_main .cart_item .item_info .item_price_wrap .price_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .item_info .item_price_wrap .price_tool .tool_edit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 45rpx;
  height: 45rpx;
  border: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .item_info .item_price_wrap .price_tool .tool_num {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 45rpx;
}
/* 底部工具栏 */
.footer_tools {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
}
.footer_tools .all_chk {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tools .total_price {
  flex: 7;
  display: flex;
  flex-direction: column;
  text-align: right;
  padding-right: 32rpx;
}
.footer_tools .total_price .price_info .info_num {
  font-size: 32rpx;
  color: var(--themeColor);
}
.footer_tools .pay {
  flex: 3;
  font-size: 32rpx;
  font-weight: 550;
  color: #fff;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
